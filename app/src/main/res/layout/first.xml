<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn1"
        android:shape="rectangle"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:text="계열"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="학과"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="일반 교과"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn4"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="전문 교과"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toTopOf="parent" />
    <ListView
        android:layout_width="200dp"
        android:layout_height="1200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:id="@+id/selector1"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="100dp"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/selector1"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/description1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:text="관련 학과"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/text1" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/text2"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="120dp"

        />
    <TextView
        android:id="@+id/description2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="일반 선택"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/text2"
        app:layout_constraintTop_toTopOf="@id/text2" />
    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/text3"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/description3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:text="진로 선택"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/text3"
        app:layout_constraintTop_toTopOf="@id/text3" />
    <TextView
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:id="@+id/text4"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/text1"
        android:layout_marginStart="200dp"
        />
    <TextView
        android:id="@+id/description4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="멘토의 한 마디"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/text4"
        app:layout_constraintTop_toTopOf="@id/text4" />
</androidx.constraintlayout.widget.ConstraintLayout>
