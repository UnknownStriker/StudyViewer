<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn1"
        android:shape="rectangle"
        app:cornerRadius="0dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:text="계열"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/BtnUnselect"/>
    <Button
        android:id="@+id/btn2"
        android:shape="rectangle"
        app:cornerRadius="0dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="학과"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/BtnUnselect"/>
    <Button
        android:id="@+id/btn3"
        android:shape="rectangle"
        app:cornerRadius="0dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="일반 교과"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/BtnUnselect"/>
    <Button
        android:id="@+id/btn4"
        android:shape="rectangle"
        app:cornerRadius="0dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="전문 교과"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/BtnSelect"/>
    <ListView
        android:choiceMode="singleChoice"
        android:listSelector="#F4F4F4"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:fadeScrollbars="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:id="@+id/selector1"/>
    <ListView
        android:choiceMode="singleChoice"
        android:listSelector="#F4F4F4"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:fadeScrollbars="false"
        app:layout_constraintStart_toStartOf="@id/selector1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginTop="100dp"
        android:id="@+id/selector2"/>
    <ListView
        android:choiceMode="singleChoice"
        android:listSelector="#F4F4F4"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:fadeScrollbars="false"
        app:layout_constraintStart_toEndOf="@id/selector2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:id="@+id/selector3"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:id="@+id/text1"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        app:layout_constraintStart_toEndOf="@id/description1"
        app:layout_constraintTop_toTopOf="@id/description1"
        android:textSize="16sp"
        android:layout_marginStart="20dp"

        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="설명"
        android:textSize="21sp"
        android:id="@+id/description1"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/selector3"
        app:layout_constraintTop_toTopOf="@id/selector3"
        android:textColor="@color/highlight"
        />
</androidx.constraintlayout.widget.ConstraintLayout>